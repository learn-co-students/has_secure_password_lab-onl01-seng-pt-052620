<h1>Log In</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %><br>

<%= form_for @user, url: "/login", method: "post" do |f| %>
    <%= f.label :name, "Username" %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit %>
<% end %>
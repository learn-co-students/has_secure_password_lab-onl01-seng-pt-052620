<h1>Log In</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %><br>

<%= form_tag('/login') do %>
    <%= label_tag :name, "Username" %>
    <%= text_field_tag :name %>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>